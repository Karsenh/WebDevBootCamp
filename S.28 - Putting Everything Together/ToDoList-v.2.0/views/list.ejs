<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <!-- Create a for each with callback to tap inside each documents attributes (including name) -->
    <% newListItems.forEach(function(item) { %>
      <form action="/delete", method="POST">
        <div class="item">
          <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
          <p><%= item.name %></p> 
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>"></input>
      </form>
    <% }); %>

    <!-- Submitting this form provides access to two things... -->
      <form class="item" action="/" method="post">
        <!-- The 'newItem' from the input field -->
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <!-- In addition to the list and the listTitle (as the value) of the submit button when pressed -->
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
