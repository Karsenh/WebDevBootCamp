<%- include('header') -%> 

    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
        <% for (var i = 0; i < Tasks.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p> <%= Tasks[i] %> </p>
        </div>
        <% } %>
    </div>

    <div class="box">
        <form action="/" method="POST">
            <input type="text" name="newTask" autocomplete="off" placeholder="New task">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include('footer') -%> 